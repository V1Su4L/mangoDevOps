pipeline{
    agent any
    parameters{
        CODE_REPO="https://github.com/V1Su4L/mangoapp"
        CODE_DIR="mangoapp"
        IMAGE_NAME="mango"
        IMAGE_TAG="V${BUILD_NUMBER}"
    }
    stages{
        stage("Clone The project"){
            script{
                sh "git clone ${CODE_REPO}"
            }
        }

        stage("Build Docker Image"){
            steps{
                script{
                    dir(${CODE_DIRECTORY}){
                        sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                    }
                }
            }
        }

        stage("Push to ECR"){
            steps{
                script{
                    sh 'docker images'
                }
            }
        }
    }
}